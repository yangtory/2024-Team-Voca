extends ./layout

block content 
    link(rel="stylesheet", href="./css/login.css")
    script(src="./js/login.js")
    div.form
        form(method="POST") 
            div.box 
                h3 로그인
                div.input
                    input(type="text" placeholder="ID" name="m_id")
                    input(type="password" placeholder="PASSWORD" name="m_pw")
                if NEED 
                    div.error= NEED
                div.btn
                    input.join(type="button" value="회원가입")
                    input.login(type="submit" value="로그인")

